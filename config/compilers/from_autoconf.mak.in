CC=@CC@
CXX=@CXX@

COMPILER_DESC=Compiler set by configure script
COMPILER_VERSION_COMMAND=Don't know don't care

CFLAGS    = @CFLAGS@
CXXFLAGS  = @CXXFLAGS@
LINKFLAGS = @LDFLAGS@

# This is not used, as proper CFLAGS and CXXFLAGS will be set at ./configure time:
DEBUG_CCFLAGS   = 
DEBUG_CXXFLAGS  = 
DEBUG_LINKFLAGS = 

# This is not used, as proper CFLAGS and CXXFLAGS will be set at ./configure time:
WARN_CCFLAGS   =
WARN_CXXFLAGS  =
WARN_LINKFLAGS =

# This is not used, as proper CFLAGS and CXXFLAGS will be set at ./configure time:
VERBOSE_CCFLAGS   =
VERBOSE_CXXFLAGS  = 
VERBOSE_LINKFLAGS =

# This is not used, as proper CFLAGS and CXXFLAGS will be set at ./configure time:
OPTIMISE_CCFLAGS   =
OPTIMISE_CXXFLAGS  =
OPTIMISE_LINKFLAGS =

PROFILE_DEFAULT = gprof

# This is not used, as proper CFLAGS and CXXFLAGS will be set at ./configure time:
PROFILE_prof_CCFLAGS   =
PROFILE_prof_CXXFLAGS  =
PROFILE_prof_LINKFLAGS =

# This is not used, as proper CFLAGS and CXXFLAGS will be set at ./configure time:
PROFILE_gprof_CCFLAGS   =
PROFILE_gprof_CXXFLAGS  =
PROFILE_gprof_LINKFLAGS =

# This is not used, as proper CFLAGS and CXXFLAGS will be set at ./configure time:
SHARED_CCFLAGS  =
SHARED_CXXFLAGS  =
SHARED_LINKFLAGS =

ifndef GCC_MAKE_SHARED_LIB
    MAKE_SHARED_LIB = $(CXX) -shared -o XXX
else
    MAKE_SHARED_LIB = $(GCC_MAKE_SHARED_LIB)
endif

STATIC_CCFLAGS   = 
STATIC_CXXFLAGS  = 
STATIC_LINKFLAGS =

TEMPLATE_SPECIFIC = -DINSTANTIATE_TEMPLATES
TEMPLATE_ARGS = 

## The -lgcc here is redundant - gcc does this anyway - but it
## helps java know what needs to be loaded.

COMPILERLIBS= $(COMPILER_LIBS_DIR:%=-L%)

## special ways of doing things, blank means default

MAKE_DEPEND_C = $(CC) -MM $(INCLUDES) $(TEMPLATES) $(TEMPLATE_SPECIFIC)
MAKE_DEPEND_CXX = $(CC) -MM $(INCLUDES) $(TEMPLATES) $(TEMPLATE_SPECIFIC)
BUILD_LIB   = $(AR) cruv
INDEX_LIB   = $(RANLIB)

